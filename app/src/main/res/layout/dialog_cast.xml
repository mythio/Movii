<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cast"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:transitionName="TEMP"
        app:civ_border_color="#99ffffff"
        app:civ_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_view_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/cast"
        app:layout_constraintStart_toEndOf="@+id/cast"
        app:layout_constraintTop_toTopOf="@+id/cast"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/txt_view_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:alpha="0.6"
        app:layout_constraintStart_toEndOf="@+id/cast"
        app:layout_constraintTop_toBottomOf="@+id/txt_view_cast" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_related"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_margin="24dp"
        android:background="@drawable/bg_rounded_rectangle"
        android:backgroundTint="#33ffffff"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cast" />

</androidx.constraintlayout.widget.ConstraintLayout>