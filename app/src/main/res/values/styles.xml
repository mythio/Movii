<resources>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/gsans_medium</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MovieLayout" parent="android:Theme">
        <item name="android:background">@drawable/bg_img_movie</item>
    </style>

    <style name="TvShowLayout" parent="android:Theme">
        <item name="android:background">@drawable/bg_img_tv</item>
    </style>

    <style name="SearchLayout" parent="android:Theme">
        <item name="android:background">@drawable/bg_img_default</item>
    </style>

</resources>
